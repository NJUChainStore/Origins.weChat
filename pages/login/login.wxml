<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../images/login.jpg"></image>
  </view>
  <view class=''>
    <label>WELCOME</label>
  </view>
  <view class="login-form">

    <view class="inputView">
      <image class="nameImage" src="../../images/name.png"></image>
      <label class="loginLab" id='username'>账号</label>
      <input class="inputText" placeholder="请输入账号" bindinput="phoneNumberInput"></input> 
    </view> 
    <view class="line"></view>

    <view class="inputView">
    <image class="keyImage" src="../../images/key.png"></image>
    <label class="loginLab" id='password'>密码</label>
    <input class="inputText" placeholder="请输入密码" bindinput="passowrdInput"></input>
    </view>

    <view class="loginBtnView">
    <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>
    </view>
  </view>
</view>