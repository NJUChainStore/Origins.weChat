page{
  background-color: #c3c9c8
}
.title {
  margin-top: 20px;
  margin-bottom: 20px;
  margin-left: 40%;
}
.repo-item {
    padding: 35rpx;
    border-bottom: 1px solid #c7c7c7;
}
.repo-item:last-child {
    border-bottom: none;
}
.repo-title {
    color: #4078C0;
    margin-bottom: 16rpx;
}
.repo-desc {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 16rpx;
}

.repo-info {
    color: #888;
    font-size: 26rpx;
    margin-bottom: 16rpx;
    position: relative;
}

.avatar-img {
    width: 20px;
    height: 20px;
    position: absolute;
    margin-top: -5rpx;
    margin-left: 10rpx;

}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

