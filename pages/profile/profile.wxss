page{ 
 height: 100%; 
} 
  
.container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 background-color: #f2f2f2
} 
  
/*登录图片*/
.login-icon{ 
 flex: none; 
} 
.login-img{ 
 width: 750rpx; 
} 
  
/*表单内容*/
.login-from { 
 margin-top: 20px; 
 flex: auto; 
 height:100%; 
} 
  
.inputView { 
 background-color: #fff; 
 line-height: 44px; 
} 
/*输入框*/
.nameImage, .keyImage { 
 margin-left: 22px; 
 width: 14px; 
 height: 14px
} 
  
.loginLab { 
 margin: 15px 15px 15px 10px; 
 color: #545454; 
 font-size: 14px
} 
.inputText { 
 flex: block; 
 float: right; 
 text-align: right; 
 margin-right: 22px; 
 margin-top: 11px; 
 color: #cccccc; 
 font-size: 14px
} 
  
.line { 
 width: 100%; 
 height: 1px; 
 background-color: #cccccc; 
 margin-top: 1px; 
} 
  
.loginBtn { 
 width: 150px; 
 margin-top: 35px; 
 /*margin-left: 0px;*/
 align-self: left;
 background-color: #259986; 
 color: #fff;
}

.signUpBtn { 
 width: 150px; 
 margin-top: 10px; 
 /*margin-left: 110px;*/
 align-self: right;
 background-color: #259986;
 color: #fff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-left: 35%;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 10px;
  margin-left: 40%;
  color: #aaa;
}